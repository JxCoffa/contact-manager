<h2>All Contacts</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Category ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Email</td>
                <td>@contact.PhoneNumber</td>
             @*    @if (contact.CategoryId = 1)
                {
                    <td>friend</td>
                }
                else
                {
                    <td>Colleague</td>
                } *@
            </tr>
        }
    </tbody>
</table>
