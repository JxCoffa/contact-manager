@using ContactManager.Models.ViewModels
@model ContactViewModel

@{
    ViewData["Title"] = "Contact Details";
}

<h1>Contact Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Date added:</dt>
        <dd class="col-sm-10">@Model.DateAdded.ToString("g")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug"
       class="btn btn-primary">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug"
       class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Home</a>
</div>