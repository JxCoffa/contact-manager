@using ContactManager.Models.ViewModels
@model ContactViewModel

@{
    ViewData["Title"] = "Delete Contact";
}

<h1>Delete Contact</h1>

<h3>Are you sure you want to delete <strong>@Model.FullName</strong>?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Phone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.Id" asp-route-slug="@Model.Slug"
           class="btn btn-secondary">Cancel</a>
    </form>
</div>